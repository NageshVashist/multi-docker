{
    "AWSEBDockerrunVersion":2,
    "containerDefinations":[
        {
            "name":"client",
            "image":"nageshvashist/multi-client",
            "hostname":"client",
            "essential":false
        },
        {
            "name":"server",
            "image":"nageshvashist/multi-server",
            "hostname":"api",
            "essential":false
        },
        {
            "name":"worker",
            "image":"nageshvashist/multi-worker",
            "hostname":"worker",
            "essential":false
        },
        {
            "name":"nginx",
            "image":"nageshvashist/multi-nginx",
            "hostname":"nginx",
            "essential":true,
            "portMappings":[{
                "hostPort":80,
                "containerPort":80
            }],
            "links":["client","server"]
        }
    ]
}